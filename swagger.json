    "host": "localhost:3333",
    "basePath": "",

    "schemes": [
        "http"
    ],  

    "paths": {
        "/skills": {
            "get": {
                "tags": [
                    "Skills"
                ],
                "summary": "Returns all my skills",              
                "responses":{
                    "200":  {
                        "description": "If all goes well, it should look like this.",
                        "schema": {
                            "$ref": "#/definitions/Skills"
                        }
                    },
                    "400":  {
                        "description": "Bad Request",
                        "schema": {
                            
                        }
                    }
                }
            }    
        },
        "/skills/{id}": {
            "get": {
                "tags": [
                    "Skills"
                ],
                "summary": "Returns one skill", 
                "parameters": [{
                    "name":"ID",
                    "in": "path",
                    "description":"ID of skill to return",
                    "required": true,
                    "type":"integer"
                }],             
                "responses":{
                    "200":  {
                        "description": "If all goes well, it should look like this.",
                        "schema": {
                            "$ref": "#/definitions/Skills"
                        }
                    },
                    "404":  {
                        "description": "Skill not found"
                    }
                }
            }
        }     
    },

    "consumes": [
        "application/json"
    ],
    "produces": [
        "application/json"
    ],

    "definitions": {
        "Skills": {
            "type": "object",
            "properties": {
                "ID": {
                    "type": "integer"
                },
                "SkillName": {
                    "type": "string"
                },
                "Percentage": {
                    "type": "integer"
                }
            }
        },
        "Certificate": {
            "type": "object",
            "properties": {
                "ID": {
                    "type": "integer"
                },
                "Institution": {
                    "type": "string"
                },
                "CourseName": {
                    "type": "string"
                },
                "Date": {
                    "type": "string"
                },
                "Description": {
                    "type": "string",
                    "x-nullable": true
                },
                "Image": {
                    "type": "string"
                }
            }
        }
    }
}